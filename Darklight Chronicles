<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Darklight Chronicles</title>
    <script src="https://d.line-scdn.net/r/ii/linejs/2.1.4/line-sdk.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 20px;
        }
        .button {
            background-color: #0078FF;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            font-size: 16px;
            border-radius: 5px;
        }
        .button:hover {
            background-color: #005BBB;
        }
        #gameContainer {
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <h1>光與暗遊戲</h1>
    <p>點擊擲骰，獲得能量點數！</p>
    <button class="button" id="diceButton">擲骰</button>
    
    <div id="gameContainer">
        <p>目前能量點數：<span id="energyPoints">0</span></p>
        <p>玩家名稱：<span id="playerName">未知</span></p>
    </div>

    <script>
        // 初始化 LINE SDK
        liff.init({ liffId: "YOUR_LIFF_ID" })
            .then(() => {
                if (liff.isLoggedIn()) {
                    // 已經登入 LINE，開始遊戲
                    startGame();
                } else {
                    liff.login(); // 登入 LINE
                }
            })
            .catch((err) => {
                console.log("LIFF 初始化錯誤", err);
            });

        // 遊戲邏輯
        let currentPoints = 0;

        // 按鈕點擊事件
        document.getElementById('diceButton').onclick = function() {
            let diceRoll = Math.floor(Math.random() * 6) + 1; // 擲骰結果 1-6
            currentPoints += diceRoll;
            document.getElementById('energyPoints').innerText = currentPoints;

            // 顯示擲骰結果
            alert("你擲出了 " + diceRoll + " 點能量！");

            // 這裡可以發送能量點數給後端 API (例如：updatePlayerPoints(currentPoints));
        };

        // 遊戲開始的邏輯
        function startGame() {
            // 獲取玩家的 LINE 資料
            liff.getProfile()
                .then(profile => {
                    document.getElementById('playerName').innerText = profile.displayName;
                    console.log("玩家名稱：" + profile.displayName);
                    console.log("玩家 ID：" + profile.userId);  // 這是玩家的 LINE ID

                    // 如果你要把玩家資料傳送給後端，可以在這裡發送
                    // 例如：sendPlayerData(profile.userId, currentPoints);
                })
                .catch((err) => {
                    console.log("獲取玩家資料錯誤", err);
                });
        }
    </script>
</body>
</html>
